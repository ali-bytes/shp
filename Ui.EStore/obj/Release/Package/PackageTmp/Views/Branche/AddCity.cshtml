

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section SeoRender{

    <title>أضافة مدينة </title>
}


<div class="panel panel-primary" id="cityCtrl" ng-app="CityApp" ng-controller="cityCtrl">
    <div class="panel-heading">
        <div class="page-header">
            <img src="/Images/menuitem.png" style="width: 20px;" />
            <span class="label label-default">أضافة مدينة</span>
        </div>
        <div class="panel-body">
            <form role="form" class="form-horizontal" id="CityFrm">





                <div class="form-group">
                    <label for="txt_Title" class="col-sm-3 control-label">الاسم</label>
                    <div class="col-sm-4">
                        <input id="txt_Title" ng-model="Name" maxlength="255" dir="rtl" type="text" data-validate="required" data-validate-type="required" class="form-control" placeholder="الاسم ">
                    </div>
                </div>

                <div class="form-group">
                    <label for="ddl_Governate" class="col-sm-3 control-label">المحافظة </label>
                    <div class="col-sm-9">
                        <select id="ddl_Governate" class="form-control" ng-model="selectedGovernate" ng-options="i.Name for i in Governates"></select>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" id="btnSave" ng-click="Save()" class="btn btn-default">حفظ</button>
                    </div>
                </div>

                <div>
                    <div id="divWarning" class="col-sm-offset-3 col-sm-9 alert alert-danger invisible"></div>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="div_Script">

    <script src="~/Scripts/Controllers/CitriesCtrl.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {

            angular.element('#cityCtrl').scope().GetAllGovernates();

         
        });
    </script>

</div>